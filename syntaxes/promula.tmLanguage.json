{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PROMULA",
  "patterns": [
    {
      "name": "keyword.define",
      "match": "(?i)\\bDefine\\b"
    },
    {
      "name": "keyword.procedure",
      "match": "(?i)\\bProcedure\\b"
    },
    {
      "name": "keyword.enddefine",
      "match": "(?i)\\bEnd Define\\b"
    },
    {
      "name": "keyword.write",
      "match": "(?i)\\bWrite\\b"
    },
    {
      "name": "keyword.do",
      "match": "(?i)\\bDo\\b"
    },
    {
      "name": "keyword.if",
      "match": "(?i)\\bIf\\b"
    },
    {
      "name": "keyword.else",
      "match": "(?i)\\bElse\\b"
    },
    {
      "name": "keyword.enddo",
      "match": "(?i)\\bEnd Do\\b"
    },
    {
      "name": "keyword.select",
      "match": "(?i)\\bSelect\\b"
    },
    {
      "name": "keyword.write_disk",
      "match": "(?i)\\bWrite Disk\\b"
    },
    {
      "name": "constant.numeric",
      "match": "(?i)\\b\\d+(?:\\.\\d+)?\\b"
    },
    {
      "name": "keyword.operator.prm",
      "match": "^(gt|lt)$"
    },
    {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\""
    }
  ],
  "scopeName": "source.promula"
}
