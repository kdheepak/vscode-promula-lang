{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PROMULA",
  "patterns": [
    {
      "match": "^(\\s*)\\*.*$",
      "name": "comment.line.prm",
      "scope": "comment"
    },
    {
      "name": "keyword.control.prm",
      "match": "(?i)\\bOPEN\\s+(?:SEGMENT|PROGRAM)\\b"
    },
    {
      "name": "keyword.control.prm",
      "match": "(?i)\\bDEFINE\\s+(?:PROGRAM|SET|VARIABLE|RELATION|PROCEDURE)\\b"
    },
    {
      "name": "keyword.control.prm",
      "match": "(?i)\\bEND\\s+(?:PROGRAM|SET|VARIABLE|RELATION|PROCEDURE|ASK)\\b"
    },
    {
      "name": "keyword.control.prm",
      "match": "(?i)\\b(?:DO|ASK|END)\\b"
    },
    {
      "name": "support.type.prm",
      "match": "(?i)\\b(?:REAL|STRING)\\b"
    },
    {
      "name": "support.type.prm",
      "match": "(?i)\\b(?:ROW|COLUMN|KEY)\\b"
    },
    {
      "name": "support.function.prm",
      "match": "(?i)\\b(?:SELECT|SUM|READ|WRITE)\\b"
    },
    {
      "name": "keyword.if",
      "match": "(?i)\\bIF\\b"
    },
    {
      "name": "keyword.else",
      "match": "(?i)\\bELSE\\b"
    },
    {
      "name": "keyword.enddo",
      "match": "(?i)\\bEND DO\\b"
    },
    {
      "name": "keyword.select",
      "match": "(?i)\\bSELECT\\b"
    },
    {
      "name": "keyword.write_disk",
      "match": "(?i)\\bWRITE DISK\\b"
    },
    {
      "name": "constant.numeric",
      "match": "(?i)\\b\\d+(?:\\.\\d+)?\\b"
    },
    {
      "name": "keyword.operator.prm",
      "match": "^(gt|lt)$"
    },
    {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\""
    }
  ],
  "scopeName": "source.promula"
}
